#!/usr/bin/env python
# -*- coding: utf-8 -*-

#this will be needed at some point.
addpath('BASH', '/bin/bash')
addpath('SH', '/usr/sh')
addpath('ZSH', '/bin/zsh')

#turn off compiler optimisation for debugging
os.environ['CFLAGS'] = ' -g -O0'
os.environ['CXXFLAGS'] = ' -g -O0'

autogenargs=' --disable-static --enable-introspection'

addpath('ACLOCAL_FLAGS', '/usr/share/aclocal')

skip=['gtk-doc', 'WebKit'] 

module_autogenargs['gtk+'] = autogenargs + ' --with-xinput=yes'
module_autogenargs['wayland'] = autogenargs + ' --with-xinput=yes --disable-documentation --disable-docs'
module_autogenargs['cairo'] = autogenargs + ' --enable-gl'
module_autogenargs['gnome-shell']=' --enable-jhbuild-wrapper-script'
module_autogenargs['clutter'] = autogenargs + ' --enable-evdev-input --enable-x11-backend'
module_autogenargs['PackageManager']=' --enable-yum'
module_autogenargs['ibus']=' --enable-python-library --enable-gconf'
module_autogenargs['gstreamer']=' --disable-docs'
module_autogenargs['gnome-bluetooth']=' --disable-docs'
makeargs = ' -v -j4'
